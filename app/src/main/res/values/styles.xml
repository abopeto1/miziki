<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Headline -->
    <style name="headline1">
        <item name="android:textSize">@dimen/headline1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>
    <style name="headline2">
        <item name="android:textSize">@dimen/headline2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
</resources>